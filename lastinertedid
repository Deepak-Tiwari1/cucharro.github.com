	if(isset($_POST['submit']))
	{
		$id=0;
		extract($_POST);
		var_dump($_POST);
		$pdo=getPDOObject();
		$posted_data=$_POST;
		$sql=$pdo->query("SELECT * FROM `cart` where  id LIKE '$id'");
		$num=$sql->rowCount();
		if(!$num)
